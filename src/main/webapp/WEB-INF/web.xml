<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Файл web.xml отвечает за маршрутизацию запросов к веб-серверу-->
    <!--Стартовая страница для первого запроса на сайт по URI /-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--Определяет имя сервлета и класс который отвечает за обработку запросов-->
    <servlet>
        <servlet-name>postServlet</servlet-name>
        <servlet-class>myServlet4.PostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>myServlet4.HelloServlet</servlet-class>
    </servlet>
    <!--Определяет URI-путь при переходе по которому должен вызывается соответствующий сервлет-->
    <servlet-mapping>
        <servlet-name>postServlet</servlet-name>
        <url-pattern>/post</url-pattern> <!--URI - localhost:8080/post-->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/</url-pattern> <!--URI - localhost:8080/ (корневой) -->
    </servlet-mapping>
</web-app>